<div class="mb-6">
  <%= link_to faultline.error_groups_path, class: "inline-flex items-center gap-2 text-sm text-slate-500 dark:text-slate-400 hover:text-primary transition-colors" do %>
    <span class="material-symbols-outlined text-lg">arrow_back</span>
    <span>Back to Errors</span>
  <% end %>
</div>

<div class="bg-white dark:bg-slate-900 border border-slate-200 dark:border-slate-800 rounded-xl overflow-hidden mb-6 glow-border">
  <div class="px-6 py-5 border-b border-slate-200 dark:border-slate-800">
    <div class="flex flex-col lg:flex-row lg:items-start lg:justify-between gap-4">
      <div>
        <div class="flex items-center gap-2 mb-3">
          <% if @error_group.recently_reopened? %>
            <span class="px-2 py-0.5 text-[10px] font-bold uppercase tracking-widest bg-amber-500/10 text-amber-500 rounded border border-amber-500/20">Reopened</span>
          <% end %>
          <% case @error_group.status %>
          <% when "unresolved" %>
            <span class="px-2 py-0.5 text-[10px] font-bold uppercase tracking-widest bg-rose-500/10 text-rose-500 rounded border border-rose-500/20">Unresolved</span>
          <% when "resolved" %>
            <span class="px-2 py-0.5 text-[10px] font-bold uppercase tracking-widest bg-emerald-500/10 text-emerald-500 rounded border border-emerald-500/20">Resolved</span>
          <% when "ignored" %>
            <span class="px-2 py-0.5 text-[10px] font-bold uppercase tracking-widest bg-slate-500/10 text-slate-500 rounded border border-slate-500/20">Ignored</span>
          <% end %>
        </div>
        <h1 class="text-2xl font-bold text-slate-900 dark:text-white"><%= @error_group.exception_class %></h1>
        <p class="mt-2 text-slate-600 dark:text-slate-400"><%= @error_group.sanitized_message %></p>
      </div>
      <div class="flex gap-2 flex-wrap">
        <% if @error_group.status == "unresolved" %>
          <%= button_to "Resolve", faultline.resolve_error_group_path(@error_group), method: :patch,
              class: "px-4 py-2 text-sm font-medium bg-primary text-white rounded-lg hover:bg-primary/90 transition-all" %>
          <%= button_to "Ignore", faultline.ignore_error_group_path(@error_group), method: :patch,
              class: "px-4 py-2 text-sm font-medium bg-slate-600 text-white rounded-lg hover:bg-slate-700 transition-all" %>
        <% else %>
          <%= button_to "Unresolve", faultline.unresolve_error_group_path(@error_group), method: :patch,
              class: "px-4 py-2 text-sm font-medium bg-violet-600 text-white rounded-lg hover:bg-violet-700 transition-all" %>
        <% end %>
        <% if Faultline.configuration.github_configured? %>
          <%= button_to "Create Issue", faultline.create_github_issue_error_group_path(@error_group),
              method: :post,
              class: "px-4 py-2 text-sm font-medium bg-slate-800 text-white rounded-lg hover:bg-slate-900 transition-all flex items-center gap-2" %>
        <% end %>
        <%= button_to faultline.error_group_path(@error_group), method: :delete,
            data: { confirm: "Are you sure you want to delete this error group and all its occurrences?" },
            class: "px-4 py-2 text-sm font-medium bg-rose-600 text-white rounded-lg hover:bg-rose-700 transition-all" do %>
          Delete
        <% end %>
      </div>
    </div>
  </div>

  <div class="px-6 py-5">
    <dl class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
      <div class="bg-slate-50 dark:bg-slate-800/50 rounded-lg p-4">
        <dt class="text-xs font-semibold text-slate-500 dark:text-slate-400 uppercase tracking-wider mb-1">Occurrences</dt>
        <dd class="text-2xl font-bold text-slate-900 dark:text-white"><%= @error_group.occurrences_count %></dd>
      </div>
      <div class="bg-slate-50 dark:bg-slate-800/50 rounded-lg p-4">
        <dt class="text-xs font-semibold text-slate-500 dark:text-slate-400 uppercase tracking-wider mb-1">First Seen</dt>
        <dd class="text-sm font-medium text-slate-900 dark:text-white"><%= @error_group.first_seen_at&.strftime("%Y-%m-%d %H:%M") %></dd>
      </div>
      <div class="bg-slate-50 dark:bg-slate-800/50 rounded-lg p-4">
        <dt class="text-xs font-semibold text-slate-500 dark:text-slate-400 uppercase tracking-wider mb-1">Last Seen</dt>
        <dd class="text-sm font-medium text-slate-900 dark:text-white"><%= @error_group.last_seen_at&.strftime("%Y-%m-%d %H:%M") %></dd>
      </div>
      <div class="bg-slate-50 dark:bg-slate-800/50 rounded-lg p-4">
        <dt class="text-xs font-semibold text-slate-500 dark:text-slate-400 uppercase tracking-wider mb-1">Location</dt>
        <dd class="text-sm font-medium text-slate-900 dark:text-white font-mono truncate">
          <%= @error_group.file_path %>:<%= @error_group.line_number %>
          <% if @error_group.method_name.present? %>
            <span class="text-slate-500">in</span> `<%= @error_group.method_name %>`
          <% end %>
        </dd>
      </div>
    </dl>
  </div>
</div>

<div class="bg-white dark:bg-slate-900 border border-slate-200 dark:border-slate-800 rounded-xl overflow-hidden mb-6 glow-border">
  <div class="px-6 py-4 border-b border-slate-200 dark:border-slate-800 flex items-center justify-between">
    <div class="flex items-center gap-3">
      <h2 class="text-sm font-semibold text-slate-500 dark:text-slate-400 uppercase tracking-wider">Occurrences Over Time</h2>
      <% if @zoomed %>
        <%= link_to faultline.error_group_path(@error_group, period: @period),
            class: "inline-flex items-center gap-1 px-2 py-1 text-xs bg-primary text-white rounded hover:bg-primary/90 transition-all" do %>
          <span class="material-symbols-outlined text-sm">zoom_out</span>
          <span>Zoom Out</span>
        <% end %>
        <span class="text-xs text-slate-500 dark:text-slate-400">
          <%= @zoom_start.strftime("%b %d %H:%M") %> - <%= @zoom_end.strftime("%b %d %H:%M") %>
        </span>
      <% end %>
    </div>
    <% unless @zoomed %>
      <div class="flex items-center gap-1 bg-slate-100 dark:bg-slate-800/50 p-1 rounded-lg border border-slate-200 dark:border-slate-700">
        <% Faultline::ErrorGroup::PERIODS.keys.each do |period| %>
          <%= link_to period,
              faultline.error_group_path(@error_group, period: period),
              class: "px-3 py-1 text-xs font-medium rounded-md transition-all #{@period == period ? 'bg-white dark:bg-slate-700 shadow-sm text-primary' : 'hover:bg-white dark:hover:bg-slate-700'}" %>
        <% end %>
      </div>
    <% end %>
  </div>
  <div class="p-6">
    <% if @chart_data.any? %>
      <%
        if @zoomed
          duration    = @zoom_end - @zoom_start
          granularity = duration <= 1.hour ? :minute : (duration <= 1.day ? :hour : :day)
        else
          period_config = Faultline::ErrorGroup::PERIODS[@period] || {}
          granularity   = period_config[:granularity] || :day
        end
        time_format = case granularity
                      when :minute then "%H:%M"
                      when :hour   then "%b %d %H:00"
                      else              "%b %d"
                      end
        zoom_interval = case granularity
                        when :minute then 60 * 1000
                        when :hour   then 3600 * 1000
                        else              86400 * 1000
                        end
        oc_labels     = @chart_data.keys.map { |d| d.respond_to?(:strftime) ? d.strftime(time_format) : Time.zone.parse(d.to_s).strftime(time_format) }
        oc_timestamps = @chart_data.keys.map { |d| d.respond_to?(:iso8601) ? d.iso8601 : Time.zone.parse(d.to_s).iso8601 }
        can_zoom      = !@zoomed && granularity != :minute
      %>
      <div class="h-48">
        <canvas id="occurrencesChart"
                data-labels="<%= json_escape(oc_labels.to_json) %>"
                data-values="<%= json_escape(@chart_data.values.to_json) %>"
                data-timestamps="<%= json_escape(oc_timestamps.to_json) %>"
                data-can-zoom="<%= can_zoom %>"
                data-zoom-interval="<%= zoom_interval %>"
                data-base-url="<%= faultline.error_group_path(@error_group) %>"
                data-period="<%= @period %>"></canvas>
      </div>
      <% unless @zoomed %>
        <p class="text-xs text-slate-400 text-center mt-4">Click on a data point to zoom in</p>
      <% end %>
    <% else %>
      <div class="h-48 flex items-center justify-center text-slate-400">No occurrences in this period</div>
    <% end %>
  </div>
</div>

<div class="bg-white dark:bg-slate-900 border border-slate-200 dark:border-slate-800 rounded-xl overflow-hidden glow-border">
  <div class="px-6 py-4 border-b border-slate-200 dark:border-slate-800 flex items-center justify-between">
    <h2 class="text-sm font-semibold text-slate-500 dark:text-slate-400 uppercase tracking-wider">Occurrences</h2>
    <span class="text-xs text-slate-500 dark:text-slate-400"><%= @total_count %> total</span>
  </div>

  <% if @occurrences.any? %>
    <div class="divide-y divide-slate-100 dark:divide-slate-800">
      <% @occurrences.each do |occurrence| %>
        <%= link_to faultline.error_occurrence_path(occurrence), class: "block group" do %>
          <div class="px-6 py-3 hover:bg-slate-50 dark:hover:bg-slate-800/50 border-l-2 border-transparent hover:border-primary transition-all duration-150">
            <div class="flex items-center justify-between gap-4">
              <div class="flex items-center gap-3 min-w-0 flex-1">
                <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-bold bg-slate-100 dark:bg-slate-800 text-slate-600 dark:text-slate-400 flex-shrink-0">
                  <%= occurrence.request_method || "-" %>
                </span>
                <span class="text-sm text-slate-700 dark:text-slate-300 truncate"><%= occurrence.message.to_s.truncate(80) %></span>
              </div>
              <div class="flex items-center gap-4 flex-shrink-0 text-xs text-slate-400">
                <% if occurrence.user_identifier %>
                  <span class="hidden sm:inline"><%= occurrence.user_identifier %></span>
                <% end %>
                <% if occurrence.ip_address.present? %>
                  <span class="font-mono hidden md:inline"><%= occurrence.ip_address %></span>
                <% end %>
                <span title="<%= occurrence.created_at.strftime("%Y-%m-%d %H:%M:%S") %>"><%= time_ago_in_words(occurrence.created_at) %></span>
                <span class="material-symbols-outlined text-slate-300 dark:text-slate-600 group-hover:text-primary transition-colors">chevron_right</span>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>

    <% if @total_pages > 1 %>
      <div class="px-6 py-4 bg-slate-50 dark:bg-slate-800/30 border-t border-slate-200 dark:border-slate-800">
        <%= render "faultline/shared/pagination", page: @page, total_pages: @total_pages %>
      </div>
    <% end %>
  <% else %>
    <div class="px-6 py-12 text-center">
      <span class="material-symbols-outlined text-4xl text-slate-300 dark:text-slate-600 mb-3 block">description</span>
      <p class="text-sm text-slate-500 dark:text-slate-400">No occurrences found</p>
    </div>
  <% end %>
</div>
