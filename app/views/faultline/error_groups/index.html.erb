<div class="mb-4 flex items-center justify-between">
  <h1 class="text-2xl font-bold text-gray-900">Errors</h1>
  <div class="flex items-center gap-4 text-sm">
    <span class="text-gray-500">Today: <span class="font-semibold text-gray-900"><%= @occurrences_today %></span></span>
    <span class="text-gray-500">This week: <span class="font-semibold text-gray-900"><%= @occurrences_this_week %></span></span>
  </div>
</div>

<div class="bg-white shadow rounded-lg overflow-hidden mb-6">
  <div class="px-4 py-3 sm:px-6 border-b border-gray-200 flex items-center justify-between">
    <h2 class="text-sm font-medium text-gray-700">Occurrences</h2>
    <div class="flex gap-1">
      <% Faultline::ErrorGroup::PERIODS.keys.each do |period| %>
        <%= link_to period,
            faultline.error_groups_path(
              chart_period: period,
              status: params[:status],
              exception_class: params[:exception_class],
              q: params[:q],
              sort: params[:sort]
            ),
            class: "px-2 py-1 text-xs rounded #{@chart_period == period ? 'bg-cyan-600 text-white' : 'bg-gray-100 text-gray-700 hover:bg-gray-200'}" %>
      <% end %>
    </div>
  </div>
  <div class="p-4">
    <% if @chart_data.any? %>
      <canvas id="overviewChart" height="60"></canvas>
    <% else %>
      <p class="text-center text-gray-500 py-4 text-sm">No occurrences in this period</p>
    <% end %>
  </div>
</div>

<% if @chart_data.any? %>
<%
  period_config = Faultline::ErrorGroup::PERIODS[@chart_period] || {}
  granularity = period_config[:granularity] || :day
  time_format = case granularity
                when :minute then "%H:%M"
                when :hour then "%b %d %H:00"
                else "%b %d"
                end
%>
<script>
  const overviewCtx = document.getElementById('overviewChart').getContext('2d');
  new Chart(overviewCtx, {
    type: 'bar',
    data: {
      labels: <%= @chart_data.keys.map { |d| d.strftime(time_format) }.to_json.html_safe %>,
      datasets: [{
        label: 'Occurrences',
        data: <%= @chart_data.values.to_json %>,
        backgroundColor: 'rgba(6, 182, 212, 0.8)',
        borderColor: 'rgb(6, 182, 212)',
        borderWidth: 1
      }]
    },
    options: {
      responsive: true,
      plugins: { legend: { display: false } },
      scales: {
        y: { beginAtZero: true, ticks: { stepSize: 1 } }
      }
    }
  });
</script>
<% end %>

<div class="flex flex-col lg:flex-row gap-6">
  <!-- Sidebar -->
  <div class="lg:w-64 flex-shrink-0">
    <div class="bg-white shadow rounded-lg p-4">
      <h3 class="text-sm font-medium text-gray-500 uppercase tracking-wider mb-3">Status</h3>
      <ul class="space-y-1">
        <li>
          <%= link_to faultline.error_groups_path,
              class: "block px-3 py-2 rounded-md text-sm #{params[:status].blank? ? 'bg-gray-100 text-gray-900 font-medium' : 'text-gray-600 hover:bg-gray-50'}" do %>
            All <span class="float-right"><%= @status_counts.values.sum %></span>
          <% end %>
        </li>
        <li>
          <%= link_to faultline.error_groups_path(status: "unresolved"),
              class: "block px-3 py-2 rounded-md text-sm #{params[:status] == 'unresolved' ? 'bg-red-100 text-red-900 font-medium' : 'text-gray-600 hover:bg-gray-50'}" do %>
            Unresolved <span class="float-right"><%= @status_counts["unresolved"] || 0 %></span>
          <% end %>
        </li>
        <li>
          <%= link_to faultline.error_groups_path(status: "resolved"),
              class: "block px-3 py-2 rounded-md text-sm #{params[:status] == 'resolved' ? 'bg-green-100 text-green-900 font-medium' : 'text-gray-600 hover:bg-gray-50'}" do %>
            Resolved <span class="float-right"><%= @status_counts["resolved"] || 0 %></span>
          <% end %>
        </li>
        <li>
          <%= link_to faultline.error_groups_path(status: "ignored"),
              class: "block px-3 py-2 rounded-md text-sm #{params[:status] == 'ignored' ? 'bg-gray-200 text-gray-900 font-medium' : 'text-gray-600 hover:bg-gray-50'}" do %>
            Ignored <span class="float-right"><%= @status_counts["ignored"] || 0 %></span>
          <% end %>
        </li>
      </ul>

      <% if @exception_classes.any? %>
        <h3 class="text-sm font-medium text-gray-500 uppercase tracking-wider mt-6 mb-3">Exception Type</h3>
        <ul class="space-y-1 max-h-48 overflow-y-auto">
          <% @exception_classes.each do |exception_class| %>
            <li>
              <%= link_to faultline.error_groups_path(exception_class: exception_class, status: params[:status]),
                  class: "block px-3 py-1 rounded-md text-xs truncate #{params[:exception_class] == exception_class ? 'bg-blue-100 text-blue-900 font-medium' : 'text-gray-600 hover:bg-gray-50'}" do %>
                <%= exception_class.split("::").last %>
              <% end %>
            </li>
          <% end %>
        </ul>
      <% end %>
    </div>
  </div>

  <!-- Main content -->
  <div class="flex-1">
    <!-- Search and Sort -->
    <div class="bg-white shadow rounded-lg mb-4 p-4">
      <div class="flex flex-col sm:flex-row gap-4">
        <%= form_with url: faultline.error_groups_path, method: :get, local: true, class: "flex-1" do %>
          <%= hidden_field_tag :status, params[:status] if params[:status].present? %>
          <%= hidden_field_tag :exception_class, params[:exception_class] if params[:exception_class].present? %>
          <div class="relative">
            <input type="text" name="q" value="<%= params[:q] %>"
                   placeholder="Search errors..."
                   class="block w-full rounded-md border-gray-300 shadow-sm focus:border-cyan-500 focus:ring-cyan-500 sm:text-sm pl-10 py-2 border">
            <div class="pointer-events-none absolute inset-y-0 left-0 flex items-center pl-3">
              <svg class="h-5 w-5 text-gray-400" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M9 3.5a5.5 5.5 0 100 11 5.5 5.5 0 000-11zM2 9a7 7 0 1112.452 4.391l3.328 3.329a.75.75 0 11-1.06 1.06l-3.329-3.328A7 7 0 012 9z" clip-rule="evenodd" />
              </svg>
            </div>
          </div>
        <% end %>
        <div class="flex gap-2">
          <%= link_to "Recent", faultline.error_groups_path(status: params[:status], q: params[:q]),
              class: "px-3 py-2 text-sm rounded-md #{params[:sort].blank? ? 'bg-cyan-600 text-white' : 'bg-gray-100 text-gray-700 hover:bg-gray-200'}" %>
          <%= link_to "Frequent", faultline.error_groups_path(status: params[:status], q: params[:q], sort: "frequent"),
              class: "px-3 py-2 text-sm rounded-md #{params[:sort] == 'frequent' ? 'bg-cyan-600 text-white' : 'bg-gray-100 text-gray-700 hover:bg-gray-200'}" %>
          <%= link_to "Oldest", faultline.error_groups_path(status: params[:status], q: params[:q], sort: "oldest"),
              class: "px-3 py-2 text-sm rounded-md #{params[:sort] == 'oldest' ? 'bg-cyan-600 text-white' : 'bg-gray-100 text-gray-700 hover:bg-gray-200'}" %>
        </div>
      </div>
    </div>

    <!-- Error list -->
    <div class="bg-white shadow rounded-lg overflow-hidden">
      <% if @error_groups.any? %>
        <ul class="divide-y divide-gray-200">
          <% @error_groups.each do |error| %>
            <li class="hover:bg-gray-50">
              <div class="px-4 py-4">
                <div class="flex items-start justify-between">
                  <div class="flex-1 min-w-0">
                    <%= link_to faultline.error_group_path(error), class: "block" do %>
                      <div class="flex items-center gap-2">
                        <% if error.recently_reopened? %>
                          <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-yellow-100 text-yellow-800">Reopened</span>
                        <% end %>
                        <% case error.status %>
                        <% when "unresolved" %>
                          <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-red-100 text-red-800">Unresolved</span>
                        <% when "resolved" %>
                          <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-green-100 text-green-800">Resolved</span>
                        <% when "ignored" %>
                          <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-gray-100 text-gray-800">Ignored</span>
                        <% end %>
                      </div>
                      <p class="mt-1 text-sm font-medium text-gray-900"><%= error.exception_class %></p>
                      <p class="mt-1 text-sm text-gray-500 truncate"><%= error.sanitized_message.truncate(100) %></p>
                      <p class="mt-1 text-xs text-gray-400">
                        <%= error.file_path %>:<%= error.line_number %>
                      </p>
                    <% end %>
                  </div>
                  <div class="ml-4 flex flex-col items-end gap-2">
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                      <%= error.occurrences_count %> occurrences
                    </span>
                    <span class="text-xs text-gray-400"><%= time_ago_in_words(error.last_seen_at) %> ago</span>
                    <div class="flex gap-1">
                      <% if error.status == "unresolved" %>
                        <%= button_to "Resolve", faultline.resolve_error_group_path(error), method: :patch,
                            class: "px-2 py-1 text-xs bg-cyan-100 text-cyan-700 rounded hover:bg-cyan-200" %>
                        <%= button_to "Ignore", faultline.ignore_error_group_path(error), method: :patch,
                            class: "px-2 py-1 text-xs bg-gray-100 text-gray-600 rounded hover:bg-gray-200" %>
                      <% elsif error.status == "resolved" %>
                        <%= button_to "Unresolve", faultline.unresolve_error_group_path(error), method: :patch,
                            class: "px-2 py-1 text-xs bg-violet-100 text-violet-700 rounded hover:bg-violet-200" %>
                      <% elsif error.status == "ignored" %>
                        <%= button_to "Unresolve", faultline.unresolve_error_group_path(error), method: :patch,
                            class: "px-2 py-1 text-xs bg-violet-100 text-violet-700 rounded hover:bg-violet-200" %>
                      <% end %>
                    </div>
                  </div>
                </div>
              </div>
            </li>
          <% end %>
        </ul>

        <% if @total_pages > 1 %>
          <div class="px-4 py-3 bg-gray-50 border-t border-gray-200">
            <%= render "faultline/shared/pagination", page: @page, total_pages: @total_pages %>
          </div>
        <% end %>
      <% else %>
        <div class="px-4 py-12 text-center">
          <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <h3 class="mt-2 text-sm font-medium text-gray-900">No errors found</h3>
          <p class="mt-1 text-sm text-gray-500">
            <% if params[:q].present? %>
              No errors match your search criteria.
            <% else %>
              Great job! No errors to show.
            <% end %>
          </p>
        </div>
      <% end %>
    </div>
  </div>
</div>
