<nav class="border-b border-slate-200 dark:border-slate-800 bg-white/80 dark:bg-slate-900/80 backdrop-blur-md sticky top-0 z-50">
  <div class="max-w-[1600px] mx-auto px-6 h-16 flex items-center justify-between">
    <div class="flex items-center gap-8">
      <%= link_to faultline.root_path, class: "flex items-center gap-2" do %>
        <div class="bg-primary p-1.5 rounded-lg">
          <span class="material-symbols-outlined text-white font-bold block text-xl">warning</span>
        </div>
        <span class="text-xl font-bold tracking-tight">Faultline</span>
      <% end %>
      <div class="hidden md:flex items-center gap-1">
        <%= link_to "Errors", faultline.error_groups_path,
            class: "px-4 py-2 text-sm font-medium rounded-md #{request.path == faultline.root_path || request.path.include?('error') ? 'bg-slate-100 dark:bg-slate-800 text-primary' : 'text-slate-500 hover:text-slate-900 dark:text-slate-400 dark:hover:text-white'}" %>
        <% if Faultline.configuration&.enable_apm %>
          <%= link_to "Performance", faultline.performance_index_path,
              class: "px-4 py-2 text-sm font-medium rounded-md #{request.path.include?('performance') ? 'bg-slate-100 dark:bg-slate-800 text-primary' : 'text-slate-500 hover:text-slate-900 dark:text-slate-400 dark:hover:text-white'}" %>
        <% end %>
      </div>
    </div>
    <div class="flex items-center gap-6">
      <%= yield :navbar_stats %>
      <button class="p-2 text-slate-400 hover:text-slate-600 dark:hover:text-slate-200">
        <span class="material-symbols-outlined">notifications</span>
      </button>
      <div class="w-8 h-8 rounded-full bg-slate-200 dark:bg-slate-700 flex items-center justify-center">
